{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
    "atlas_username": "jb_hashicorp",
    "name":           "test-windows-app",
    "region":         "us-east-1",
    "vpc_id":         "vpc-a3f403c7",
    "subnet_id":      "subnet-d8ab40e5",
    "source_ami":     "ami-f70cdd9c",
    "instance_type":  "t2.micro",
    "winrm_username": "Administrator",
    "user_data_file": "packer/scripts/windows/ec2_user_data.ps1",
    "bastion_host":   "52.5.191.22",
    "bastion_user":   "ubuntu",
    "bastion_key":    "terraform/files/test-windows-app.pem"
  },
  "builders": [
    {
      "type":            "amazon-ebs",
      "access_key":      "{{user `aws_access_key`}}",
      "secret_key":      "{{user `aws_secret_key`}}",
      "region":          "{{user `region`}}",
      "vpc_id":          "{{user `vpc_id`}}",
      "subnet_id":       "{{user `subnet_id`}}",
      "ssh_private_ip":  false,
      "associate_public_ip_address": true,
      "source_ami":      "{{user `source_ami`}}",
      "instance_type":   "{{user `instance_type`}}",
      "communicator":    "winrm",
      "winrm_username":  "{{user `winrm_username`}}",
      "winrm_timeout":   "30m",
      "user_data_file":  "{{user `user_data_file`}}",
      "ssh_bastion_host": "{{user `bastion_host`}}",
      "ssh_bastion_username": "{{user `bastion_user`}}",
      "ssh_bastion_private_key_file": "{{user `bastion_key`}}",
      "ami_name":        "{{user `name`}} {{timestamp}}",
      "ami_description": "{{user `name`}} AMI",
      "run_tags": {
        "ami-create": "{{user `name`}}"
      },
      "tags": {
        "ami": "{{user `name`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "packer/scripts/windows/iis.ps1"
    }
  ],
  "post-processors": [
    {
      "type": "atlas",
      "artifact": "jb_hashicorp/test-windows-app",
      "artifact_type": "amazon.ami",
      "metadata": {
        "created_at": "{{timestamp}}"
      }
    }
  ],
  "push": {
    "name": "{{user `atlas_username`}}/{{user `name`}}",
    "base_dir": "../.",
    "include": [
      "{{user `bastion_key`}}",
      "{{user `user_data_file`}}",
      "packer/scripts/windows/*"
    ],
    "vcs": false
  }
}
