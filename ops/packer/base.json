{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
    "atlas_username": "highlyunavailable",
    "name": "windows-test-base",
    "region": "us-west-2",
    "vpc_id": "vpc-00936f65",
    "subnet_id": "subnet-edbfb3ab",
    "source_ami": "ami-c3b3b1f3",
    "instance_type": "t2.micro",
    "winrm_username": "Administrator",
    "user_data_file": "{{template_dir}}/userdata/example.userdata"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `region`}}",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "associate_public_ip_address": true,
      "source_ami": "{{user `source_ami`}}",
      "user_data_file": "{{user `user_data_file`}}",
      "instance_type": "{{user `instance_type`}}",
      "communicator": "winrm",
      "winrm_username": "{{user `winrm_username`}}",
      "ami_name": "{{user `name`}} {{timestamp}}",
      "ami_description": "{{user `name`}} AMI",
      "run_tags": {
        "ami-create": "{{user `name`}}"
      },
      "tags": {
        "ami": "{{user `name`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "scripts": [
        "{{template_dir}}/scripts/windows/install-webserver.ps1",
        "{{template_dir}}/scripts/windows/install-winupdates.ps1"
      ]
    },
    {
      "type": "windows-restart",
      "restart_command": "powershell \"& {(Get-WmiObject win32_operatingsystem).LastBootUpTime > C:\\ProgramData\\lastboot.txt; Restart-Computer -force}\"",
      "restart_check_command": "powershell -command \"& {if ((get-content C:\\ProgramData\\lastboot.txt) -eq (Get-WmiObject win32_operatingsystem).LastBootUpTime) {Write-Output 'Waiting for restart'; start-sleep 600} else {Write-Output 'Restart complete'}}\""
    },
    {
      "type": "powershell",
      "scripts": [
        "{{template_dir}}/scripts/windows/install-winupdates.ps1"
      ]
    },
    {
      "type": "windows-restart",
      "restart_command": "powershell \"& {(Get-WmiObject win32_operatingsystem).LastBootUpTime > C:\\ProgramData\\lastboot.txt; Restart-Computer -force}\"",
      "restart_check_command": "powershell -command \"& {if ((get-content C:\\ProgramData\\lastboot.txt) -eq (Get-WmiObject win32_operatingsystem).LastBootUpTime) {Write-Output 'Waiting for restart'; start-sleep 600} else {Write-Output 'Restart complete'}}\""
    },
    {
      "type": "powershell",
      "scripts": [
        "{{template_dir}}/scripts/windows/set-ec2config.ps1",
        "{{template_dir}}/scripts/windows/set-bundleconfig.ps1"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "atlas",
      "artifact": "{{user `atlas_username`}}/{{user `name`}}",
      "artifact_type": "amazon.ami",
      "metadata": {
        "created_at": "{{timestamp}}"
      }
    }
  ],
  "push": {
    "name": "{{user `atlas_username`}}/{{user `name`}}",
    "base_dir": "{{template_dir}}",
    "include": [
      "{{user `user_data_file`}}",
      "{{template_dir}}/scripts/windows/*"
    ],
    "vcs": false
  }
}
